---
// components
import Container from "@/components/Container"

// data
import Navigation from "@/data/navigation"
---

<style lang="scss">
    @import "../assets/styles/base/mixins/mx-breakpoints.scss";
    @import "../assets/styles/base/mixins/mx-spacing.scss";

    footer {
        @include space-y(var(--space-500));
        padding: var(--section-lg) 0;

        .contact {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: var(--space-200);

            h2 {
                color: rgba(var(--color-gray-800), 1);
            }

            a {
                font-size: var(--text-lg);
                font-weight: 600;
                transition: var(--transition-short);
                display: flex;
                align-items: center;

                .button-icon {
                    padding: var(--space-50);
                    font-weight: 400;
                    border-radius: var(--rounded-md);
                    border-top-right-radius: 0;
                    border-bottom-right-radius: 0;
                    border-left: 1px solid rgba(var(--color-blue-800), 1);
                    border-top: 1px solid rgba(var(--color-blue-800), 1);
                    border-bottom: 1px solid rgba(var(--color-blue-800), 1);
                }

                .button-text {
                    padding: var(--space-50);
                    border-top-right-radius: var(--rounded-md);
                    border-bottom-right-radius: var(--rounded-md);
                    border: 1px solid rgba(var(--color-blue-800), 1);
                }
            }
        }

        nav {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: var(--space-200);

            @include bp-md {
                flex-direction: row;
            }

            .nav-items {
                display: flex;
                gap: 0 var(--space-50);
                text-transform: lowercase;

                @include bp-md {
                    gap: 0 var(--space-200);
                }

                a.nav-links {
                    font-size: var(--text-sm);
                    text-decoration: none;

                    @include bp-sm {
                        font-size: var(--text-lg);
                    }

                    &:hover {
                        text-decoration: underline;
                    }
                }
            }
        }
    }
</style>

<div style="background: rgba(var(--color-blue-500), .1);">
    <Container>
        <footer>
            <div class="contact">
                <h2>
                    Enough Talking.<br />
                    Let's Work Together.
                </h2>

                <a href="/contact">
                    <span class="button-icon">
                        &#9993;
                    </span>
                    <span class="button-text">Contact Me</span>
                </a>
            </div>

            <hr />

            <div class="navigation">
                <p>Hey there. Iâ€™m Erik Olsen, a digital marketing expert and photographer based out of Austin, TX.</p>
            </div>
        </footer>
    </Container>
</div>