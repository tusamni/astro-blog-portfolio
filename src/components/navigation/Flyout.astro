---
// components
import Container from "@/components/Container"
import Social from "@/components/navigation/Social"

// data
import Navigation from "@/data/navigation"
---

<style lang="scss">
    @import "../../assets/styles/base/mixins/mx-breakpoints.scss";
    @import "../../assets/styles/base/mixins/mx-spacing.scss";

    #flyout {
        margin-top: 0; // reset space-y global

        position: fixed;
        top: 0;
        width: 100%;
        height: 100vh;
        background: rgba(var(--color-gray-900), .97);

        transform: translateX(-100%);
        z-index: 50;
        transition: var(--transition-short);

        @include bp-md {
            display: none;
        }

        &>div {
            width: 100%;
            height: 100vh;
            padding-top: var(--space-400);
        }

        :global(.container) {
            @include space-y(var(--space-200));
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;

            img {
                width: 5rem;
            }

            button {
                border: 0;
                background: none;
                color: white;
                width: 30px;
            }
        }

        hr {
            border: 0;
            border-bottom: 1px solid rgba(var(--color-gray-700), 1);
        }

        .links {
            display: flex;
            flex-direction: column;
            font-size: var(--text-xl);
            gap: var(--space-100);

            a {
                color: rgba(var(--color-gray-100), 1);
                text-decoration: none;

            }
        }

        .bio {
            color: rgba(var(--color-gray-100), 1);
            font-weight: 300;
            line-height: var(--line-height-xl);

            @include space-y(var(--space-100));

            a {
                text-decoration: underline;
            }
        }

        .social {
            display: flex;
            justify-content: start;
            gap: var(--space-100);

            :global(a) {
                color: white;
                width: 1.25rem;
                height: auto;
            }
        }
    }
</style>

<!-- mobile flyout -->
<div id="flyout">
    <div>
        <Container>
            <div class="header">
                <img src="https://cdn.eriksolsen.com/images/logo/vertical-light.svg" />

                <!-- close -->
                <button id="close" aria-label="close menu" class="trigger">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z"></path>
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <hr />

            <!-- links -->
            <div class="links">
                {Navigation.map((item)=> (
                <a href={item.url} title={item.display}>
                    {item.display}
                </a>
                ))}
            </div>

            <hr />

            <!-- bio -->
            <div class="bio">
                <p>For fifteen years, I've run digital marketing campaigns. Lately, I've been in charge of revenue growth at ICG America, generating $50 million in direct-to-consumer sales.</p>
                <p><i>Oh yeah</i>, I also shoot <a href="/photography" title="Car Photography">car photography</a></p>
            </div>

            <hr />

            <div class="social">
                <Social />
            </div>
        </Container>
    </div>
</div>