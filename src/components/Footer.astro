---
// components
import Container from "@/components/Container"

// data
import Navigation from "@/data/navigation"

// props
export interface Props {
    recentPosts?: any
}
const { recentPosts } = Astro.props;
---

<style lang="scss">
    @import "../assets/styles/base/mixins/mx-breakpoints.scss";
    @import "../assets/styles/base/mixins/mx-spacing.scss";

    footer {
        @include space-y(var(--space-500));
        padding: var(--section-lg) 0;

        .contact {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: var(--space-200);

            form {
                @include space-y(var(--space-200));
                width: 30%;
            }

            a {
                font-size: var(--text-lg);
                font-weight: 600;
                transition: var(--transition-short);
                display: flex;
                align-items: center;
                color: white;

                &:hover {

                    .button-icon,
                    .button-text {
                        background: rgba(var(--color-gray-300), .4);
                    }
                }

                .button-icon {
                    padding: var(--space-50);
                    font-weight: 400;
                    border-radius: var(--rounded-md);
                    border-top-right-radius: 0;
                    border-bottom-right-radius: 0;
                    border-left: 1px solid rgba(var(--color-gray-300), 1);
                    border-top: 1px solid rgba(var(--color-gray-300), 1);
                    border-bottom: 1px solid rgba(var(--color-gray-300), 1);
                    transition: background .3s ease-in-out;
                }

                .button-text {
                    padding: var(--space-50);
                    border-top-right-radius: var(--rounded-md);
                    border-bottom-right-radius: var(--rounded-md);
                    border: 1px solid rgba(var(--color-gray-300), 1);
                    transition: background .3s ease-in-out;
                }
            }
        }

        hr {
            background: none;
            border: 0;
            border-bottom: 1px solid rgba(var(--color-gray-200), 1);
        }

        .navigation {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: var(--space-900);

            &>div:first-child {
                @include space-y(var(--space-200));
                width: 50%;
                font-weight: 200;
                color: rgba(var(--color-gray-600), 1);
                line-height: var(--line-height-lg);

                .description {
                    font-size: var(--text-3xl);
                    font-weight: 300;
                    line-height: var(--line-height-lg);
                }

                .verse {
                    @include space-y(.5rem);
                    font-size: var(--text-xl);
                    color: rgba(var(--color-gray-700), .7);
                }
            }


            nav {
                display: flex;
                align-items: center;
                gap: var(--space-400);

                &>div {
                    display: flex;
                    flex-direction: column;
                    gap: var(--space-50);

                    p {
                        font-weight: 600;
                        font-size: var(--text-xl);
                        color: black;
                    }

                    a {
                        font-weight: 300;
                        color: rgba(var(--color-gray-600), 1);

                        &:hover {
                            text-decoration: underline;
                        }
                    }
                }

                .recentPosts {
                    a {
                        overflow: hidden;
                        text-overflow: ellipsis;
                        white-space: nowrap;
                        max-width: 20ch;
                    }
                }
            }
        }
    }
</style>

<div style="background: rgba(var(--color-gray-50), 1);">
    <Container>
        <footer>
            <div class="contact">
                <h2>
                    Enough Talking.<br />
                    Let's Work Together.
                </h2>

                <form action="/contact/success/" name="Contact - Page" method="POST" data-netlify="true">
                    <div class="input-group">
                        <label for="name">Full Name</label>
                        <input type="text" name="name" id="name" autocomplete="given-name" required>
                    </div>

                    <div class="input-group">
                        <label for="email">E-mail</label>
                        <input type="email" name="email" id="email" autocomplete="email" required>
                    </div>

                    <div class="input-group">
                        <div class="optional">
                            <label for="tel">Phone Number</label>
                            <span id="tel-optional">Optional</span>
                        </div>
                        <input type="tel" name="phone" id="phone" aria-describedby="tel-optional" autocomplete="tel" required>
                    </div>
                    <div class="input-group">
                        <div class="optional">
                            <label for="message">How can I help you?</label>
                            <span id="message-optional">Optional</span>
                        </div>
                        <textarea id="message" name="message" aria-describedby="message-optional"></textarea>
                    </div>

                    <div>
                        <button type="submit">Submit</button>
                    </div>
                </form>
                <!-- <a href="/contact">
                    <span class="button-icon">
                        &#9993;
                    </span>
                    <span class="button-text">Contact Me</span>
                </a> -->
            </div>

            <hr />

            <div class="navigation">
                <div>
                    <p class="description">Hey there. I'm Erik Olsen, a digital marketing expert and photographer based out of Austin, TX.</p>
                    <figure class="verse">
                        <blockquote cite="https://www.biblegateway.com/passage/?search=Jeremiah%2029%3A11&version=NIV">
                            <p>"For I know the plans I have for you", declares the Lord, "plans to prosper you and not to harm you, plans to give you hope and a future".</p>
                        </blockquote>
                        <figcaption><i>Jeremiah 29:11</i></figcaption>
                    </figure>
                </div>

                <nav>
                    <div>
                        <p>Pages</p>
                        <a href="/">Home</a>
                        <a href="/">About Me</a>
                        <a href="/">Photography</a>
                        <a href="/">Contact Me</a>
                    </div>
                    <div class="recentPosts">
                        <p>Recent Posts</p>
                        {recentPosts.map(p =>
                        <a href={p.url} title={p.frontmatter.title}>{p.frontmatter.title}</a>
                        )}
                    </div>
                </nav>
            </div>
        </footer>
    </Container>
</div>